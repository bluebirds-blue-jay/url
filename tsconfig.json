{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSourceMap": true,
    "types": ["node", "mocha"]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}